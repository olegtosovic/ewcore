{
  // Default generated logging configuration.
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  // Database connection strings.
  "ConnectionStrings": {
    "ArgosyTest": "Data Source=DESKTOP-JLE7CPB;Initial Catalog=ArgosyTest;Integrated Security=True",
    "AdventureWorks": "Data Source=DESKTOP-JLE7CPB;Initial Catalog=AdventureWorks;Integrated Security=True",
    "Northwind": "Data Source=DESKTOP-JLE7CPB;Initial Catalog=Northwind;Integrated Security=True",
    "OrkoEntityWorks": "Data Source=DESKTOP-JLE7CPB;Initial Catalog=OrkoEntityWorks;Integrated Security=True",
    "Orko": "Data Source=DESKTOP-JLE7CPB;Initial Catalog=Orko;Integrated Security=True"
  },

  // EntityWorks configuration.
  "EntityWorks": {
    "ContextMappings": {
      "GuestContext": "Orko",
      "UserContext":  "Orko",
      "RootContext":  "Orko"
    }
  },

  // EntityWorksGenerator configuration.
  "EntityWorksGenerator": {

    // Generator options.
    "Options": {
      "UseParallelProcessing": true,
      "GenerateAsyncMethodsOnly": true,
      "OutputDirectory": "C:\\EWTest"
    },

    // Generator database list.
    "ContextModels": {

      // AdventurWorks with generator options.
      "AdventureWorks": {
        "ConnectionName": "AdventureWorks",
        "UseLanguageTables": false,
        "ForeignKeyNamingConvention": "FK_FN",
        "OutputDirectory": null
      },

      // Northwind with generator options.
      "Northwind": {
        "ConnectionName": "Northwind",
        "UseLanguageTables": false,
        "ForeignKeyNamingConvention": "FK_LS",
        "OutputDirectory": null
      },

      // Orko with generator options.
      "Orko": {
        "ConnectionName": "Orko",
        "UseLanguageTables": true,
        "LanguageTableSuffix": "_jezik",
        "ForeignKeyNamingConvention": "FK_FC_FN",
        "OutputDirectory": null
      }
    }
  }
}
